{
  "compilerOptions": {
    "baseUrl": "./src",
    "jsx": "react",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["./*"]
    },
    "target": "esnext",
    "typeRoots": [
      "./src/@types/",
      ".src/**/@types/",
      ".src/**/**/@types/",
      "node_modules/@types/"
    ],
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "skipLibCheck": true,
    "strict": true
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*"]
}
