{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "esnext",
    "jsx": "preserve",
    "lib": ["dom", "es2015", "es2017"],
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "typeRoots": [
      "./node_modules/@types",
      "./@types"
    ]
  },
  "exclude": ["node_modules"],
  "include": [
    "./**/*.ts",
    "./**/*.tsx",
    "./**/*.css",
    "./**/*.scss",
    "./@types"
  ]
}
